<% layout('./layouts/layouts') %>
<div style="background-image: url('https://images.unsplash.com/photo-1472803828399-39d4ac53c6e5?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=821&q=80'); background-size: cover;">
    <br><br><br>
    <div class="container" >
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card">
                    <div class="card-header">
                        <h1>Transactions History</h1>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <% if(a.length > 0) { %>
                                <% for(let c of a) {%>
                                    <li class="list-group-item" style="text-transform: capitalize;">
                                        <%= c.payment %> <b>----- <%= c.Date %></b>
                                    </li>
                                    <% } %>
                                        <% } else { %>
                                            <li class="list-group-item" style="text-transform: capitalize;">
                                                Sorry!!!! No transactions Yet........
                                            </li>
                                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br><br><br><br><br><br><br>
    </div>
